<h1><%= @todo.title %></h1>
<p><%= @todo.body %></p>
<p><%= @todo.status %></p>
<form action="/todo/<%= @todo.id %>"  method="post">
  <input type="hidden" class="form-control" name="_method" value ="delete" />
  <p>
    <a href="/todo/<%= @todo.id %>/edit">Edit</a> | <a href="/todo">My Todos</a>
  </p>
  <button type="submit">Delete</button>
</form>
